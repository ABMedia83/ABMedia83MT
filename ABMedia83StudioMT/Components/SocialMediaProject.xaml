<local:StudioControl x:Class="ABMedia83StudioMT.Components.SocialMediaProject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:Albert.Win32.Controls;assembly=Albert.Win32"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABMedia83StudioMT.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
	
		<!-- ToolBar -->
		<ToolBarTray>
			<ToolBar>
				<ComboBox x:Name="cmbSelectMode" Width="150" ItemTemplate="{StaticResource basicList}" />
			</ToolBar>
		</ToolBarTray>
		
		<!-- Content Grid -->
		<Grid x:Name="gridContent" Grid.Row="1" >
			<Grid.ColumnDefinitions>
				<ColumnDefinition x:Name="col1" />
				<ColumnDefinition x:Name="colSplit" Width="30" />
				<ColumnDefinition x:Name="col2" />
			</Grid.ColumnDefinitions>
			<local:Notes x:Name="notes" />
			<local:DescriptionTags x:Name="descriptionTag" />
			<local:SocialMediaBrowser x:Name="exportBrowser" />
			<GridSplitter x:Name="gridSplitter" />

		</Grid>
		
		
	</Grid>
</local:StudioControl>
