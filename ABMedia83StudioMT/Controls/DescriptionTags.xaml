<local:StudioControl x:Class="ABMedia83StudioMT.Controls.DescriptionTags"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:Albert.Win32.Controls;assembly=Albert.Win32"
			 xmlns:local="clr-namespace:ABMedia83StudioMT.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		
		<!-- Description -->
		<c:TitleControl Grid.Row="0" Title="Desccription">
			<local:TextPad x:Name="txtDescription" />
		</c:TitleControl>
		<!-- GridSplitter -->
		<GridSplitter Grid.Row="1" Style="{StaticResource horzSplit}" />
		<!-- Tags -->
		<c:TitleControl Grid.Row="2" Title="Tags">
			<local:TextPad x:Name="txtTags" />
		</c:TitleControl>
	</Grid>
</local:StudioControl>
